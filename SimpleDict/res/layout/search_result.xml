<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <EditText android:id="@+id/editText_searchWrod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/editText_searchWrod_hint"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textView_search_explain"/>
    
    <EditText android:id="@+id/editText_searchExplain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/textView_search_explain"/>

</LinearLayout>
